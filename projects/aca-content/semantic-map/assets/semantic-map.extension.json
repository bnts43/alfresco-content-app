{
  "$id": "semantic-map.extension",
  "$version": "1.0.0",
  "$name": "Semantic Map Extension",
  "$description": "Interactive Sigma.js graph visualization of document semantic proximity",

  "routes": [
    {
      "id": "semantic-map.route",
      "path": "semantic-map",
      "layout": "app.layout.main",
      "auth": ["app.auth"],
      "data": {
        "title": "Semantic Map"
      },
      "children": [
        {
          "id": "semantic-map.main",
          "path": "",
          "loadChildren": "./projects/semantic-map/src/lib/semantic-map.module#SemanticMapModule"
        }
      ]
    }
  ],

  "features": {
    "navbar": [
      {
        "id": "semantic-map.nav",
        "order": 500,
        "icon": "bubble_chart",
        "title": "Semantic Map",
        "description": "Explore document semantic proximity",
        "route": "semantic-map",
        "rules": {
          "visible": "semantic-map.canShow"
        }
      }
    ],

    "sidebar": [
      {
        "id": "semantic-map.sidebar",
        "order": 500,
        "icon": "bubble_chart",
        "title": "Semantic Map",
        "component": "semantic-map.nav",
        "rules": {
          "visible": "semantic-map.canShow"
        }
      }
    ]
  }
}
